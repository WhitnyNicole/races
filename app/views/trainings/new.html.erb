<h1> Log in Here </h1>

<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<%= form_for :user do |f| %>

  <%=f.label :username %>
  <%= f.text_field :username, required: true  %>

  <%=f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.submit "Log in" %>

<% end %>
